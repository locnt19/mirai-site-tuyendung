extends _layout.pug

block var
	- var title = 'Chi tiết 1 việc làm'

block main
	section.vl-form
		.container
			form.banner-lc_search
				input.banner-lc_search--input(
					name="query"
					type="text"
					data-role="input"
					placeholder="Tìm kiếm theo kỹ năng, chức vụ, công ty"
					data-prepend="<span class='mdi mdi-magnify'></span>"
					data-clear-button-icon="<span class='mdi mdi-delete-circle-outline'></span>")
				select.banner-lc_search--select(
					name="dia-diem"
					data-role="select"
					data-duration="0")
					option(value="all") Tất cả địa điểm
					option(value="brvt") Bà Rịa - Vũng Tàu
					option(value="hn") Hà Nội
					option(value="hcm") Hồ Chí Minh
				button(type="submit").button.banner-lc_search--button Tìm kiếm
	section.ctvl-wrapper.container