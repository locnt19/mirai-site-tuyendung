extends _layout.pug

block var
	- var title = 'Profile client'

block main
	section.container
		nav.breadcrumb.mt-4.mb-2
			a.breadcrumb-step(href='index.html') Trang chủ
			a.breadcrumb-step.breadcrumb-step_active(href='profile-client.html') Hồ sơ
	section.container
		.profile-client_wrapper.row
			.col-lg-3
				.profile-content.text-center.px-4.py-6.mb-4
					.profile-avatar
						img(src="https://via.placeholder.com/150" alt="logo")
					.h5.mb-2 Nguyễn Thành Lộc
					.text-small Chức danh
					.text-bold.text-small Mới tốt nghiệp
					.text-small Công ty gần đây nhất
					.text-small Bằng cấp cao nhất
					p.text-secondary.mb-2
						span.mr-1 Mức độ hoàn chỉnh:
						strong Chưa hoàn chỉnh
					.w-75.mx-auto.mb-4.border-radius(data-role="progress" data-value="35" data-small="true")
					a(href="profile-ho-so.html").profile-btn_capnhat.text-secondary Cập nhật hồ sơ
				.profile-content.p-3.mb-4.text-secondary.text-center
					a(href="viec-da-luu.html")
						span Việc làm đã lưu
						span.mdi.mdi-heart.fg-red.ml-1
				.profile-content.px-4.pb-4.mb-4.text-secondary
					.vl-company_title.mb-0 Cài đặt
					p.mt-2.mb-1 Hồ sơ đính kèm
					input(
						type="file"
						data-role="file"
						data-button-title="Tải hồ sơ"
						accept=".doc,.docx,.pdf"
					)
					p.text-small
						span Định dạng file chỉ có thể là 
						code .doc
						span , 
						code .docx
						span , 
						code .pdf
						span và file nhỏ hơn 2MB.
					.login-line.z-1
					p.text-bold Cho phép tìm kiếm
					.d-flex
						//- div.mr-2
						p.mt-0.mr-2 Hồ sơ của bạn sẽ không hiển thị cho nhà tuyển dụng
						input(
							data-role="switch")
			.col-lg-9.pl-8-lg
				.row.mb-3
					.col-md-4.pt-0
						.profile-content.text-center.h-100.p-4.mb-4
							.display2.m-0(style="color: #E92D18") 0
							p.text-secondary.text-bold NHÀ TUYỂN DỤNG XEM HỒ SƠ
							p.text-small.mt-2
								a(href="#") Kiểm tra nhà tuyển dụng xem hồ sơ
					.col-md-4.pl-4-lg.pt-0
						.profile-content.text-center.h-100.p-4.mb-4
							.display2.m-0(style="color: #E09F1F") 0
							p.text-secondary.text-bold THÔNG BÁO VIỆC LÀM
							p.text-small.mt-2
								a(href="#") Quản lý thông báo việc làm
					.col-md-4.pl-4-lg.pt-0
						.profile-content.text-center.h-100.p-4.mb-4
							.display2.m-0(style="color: #1877F2") 0
							p.text-secondary.text-bold VIỆC LÀM CỦA TÔI
							.profile-client_apply.d-flex.flex-justify-around.text-small.mt-2
								a(href="viec-da-luu.html" title="Hồ sơ ứng tuyển đang chờ nhà tuyển dụng xử lý")
									strong(style="background: #E92D18") 0
									span Đã nộp
								a(href="viec-da-luu.html" title="Nhà tuyển dụng đã mở xem hồ sơ ứng tuyển của bạn")
									strong(style="background: #E09F1F") 0
									span Đã xem
								a(href="viec-da-luu.html" title="Các vị trí nay đã ngừng nhận hồ sơ, tuy nhiên nhà tuyển dụng vẫn có thể tiếp tục liên hệ với bạn")
									strong(style="background: #1877F2") 0
									span Đã đóng
				.profile-content.p-4.mb-3
					.h5 Việc làm phù hợp với bạn
					-for(var i = 0; i < 10; i++)
						article.vl-list_box.job-box
							.img
								a(href="profile-nha-tuyen-dung.html")
									img(src="img/nha-tuyen-dung/aeon-mall.webp", alt="aeon-mall.webp")
							.info
								.job-box_title.text-bold
									a(href="chi-tiet-1-viec-lam.html" title="Accounting Officer (Aeonmall Tân Phú)") Accounting Officer (Aeonmall Tân Phú)
								.job-box_subtitle.text-small
									a(href="profile-nha-tuyen-dung.html" title="AEONMALL Vietnam Co., Ltd") AEONMALL Vietnam Co., Ltd
								.d-flex
									.job-luong.text-small.text-bold 21 ~ 30tr VNĐ
									.job-diadiem.text-small.ml-4(title="Địa điểm")
										span.mdi.mdi-map-marker
										span.ml-1 Hồ Chí Minh
							.action
								a(href="#" title="Lưu việc làm").vl-list_btn--heart.hearted
									span.mdi.mdi-heart-outline
								.vl-list_posted.text-small
									span.mdi.mdi-clock-check-outline
									span.ml-1 28/02/2020